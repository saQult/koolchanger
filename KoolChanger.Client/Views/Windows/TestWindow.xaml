<Window x:Class="KoolChanger.Client.Views.Windows.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoolChanger.Client.Views.Windows"
        xmlns:vm="clr-namespace:KoolChanger.Client.ViewModels"
        xmlns:models="clr-namespace:KoolChanger.Client.Models"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseDown="DragMove"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/icon.ico"
        Title="TestWindow" Height="730" Width="1330">
    <Window.Resources>
        <HierarchicalDataTemplate DataType="{x:Type models:NavItem}" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}"/>
        </HierarchicalDataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />

                </Grid.ColumnDefinitions>
                <Border Background="#AA000000" CornerRadius="10,0,0,0">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <Image Source="pack://application:,,,/Assets/logomin.png" Width="40" />
                        <Label Content="KOOLChanger"
                           HorizontalAlignment="Center"
                           FontSize="30"
                           FontWeight="ExtraBold"
                           Foreground="#f5dbff" />
                    </StackPanel>
                </Border>


                
            </Grid>
        </Border>        
        
        <Border Grid.Column="0" Grid.Row="1"
                Background="#AA000000" Padding="10"  BorderThickness="0" CornerRadius="0,0,0,10">
            <DockPanel LastChildFill="True">
                <TreeView x:Name="SidebarTree"
                          ItemsSource="{Binding SidebarItems}"
                          Background="Transparent"
                          BorderThickness="0"
                          Foreground="#EAEAEA">

                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#f5dbff"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="18"/>
                            <EventSetter Event="MouseLeftButtonUp" Handler="TreeViewItem_MouseLeftButtonUp"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2AFFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>

                </TreeView>
            </DockPanel>
        </Border>
        <Border Grid.Column="1" Background="#99000000" Padding="16" Grid.RowSpan="2"  CornerRadius="0,10,10,0" Panel.ZIndex="1">
            <Grid>
                <Frame Content="{Binding CurrentPage}"
                       NavigationUIVisibility="Hidden"
                       HorizontalContentAlignment="Left"
                       VerticalContentAlignment="Top">
                </Frame>
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Image Width="24"
                           Margin="10,0,0,0"
                           Cursor="Hand"
                           Panel.ZIndex="10"
                           MouseDown="Minimize_Click"
                           Source="pack://application:,,,/assets/minimizeicon.png" />
                    <Image Width="24"
                           Margin="10,0,0,0"
                           Cursor="Hand"
                           MouseDown="CloseApp_Click"
                           Source="pack://application:,,,/assets/closeicon.png" />
                </StackPanel>
            </Grid>
        </Border>
        <Thumb x:Name="ResizeTop" Grid.ColumnSpan="2" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Cursor="SizeNS" Grid.RowSpan="2" 
               DragDelta="ResizeTop_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeBottom" Grid.ColumnSpan="2" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Cursor="SizeNS" Grid.RowSpan="2" 
               DragDelta="ResizeBottom_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeLeft" Grid.ColumnSpan="2" Width="6" HorizontalAlignment="Left" VerticalAlignment="Stretch" Cursor="SizeWE" Grid.RowSpan="2" 
               DragDelta="ResizeLeft_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeRight" Grid.ColumnSpan="2" Width="6" HorizontalAlignment="Right" VerticalAlignment="Stretch" Cursor="SizeWE"
               DragDelta="ResizeRight_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>

        <Thumb x:Name="ResizeTopLeft" Grid.ColumnSpan="2" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Top" Cursor="SizeNWSE" Grid.RowSpan="2" 
               DragDelta="ResizeTopLeft_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeTopRight" Grid.ColumnSpan="2" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Top" Cursor="SizeNESW" Grid.RowSpan="2" 
               DragDelta="ResizeTopRight_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeBottomLeft" Grid.ColumnSpan="2" Width="12" Height="12" HorizontalAlignment="Left" VerticalAlignment="Bottom" Cursor="SizeNESW" Grid.RowSpan="2" 
               DragDelta="ResizeBottomLeft_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
        <Thumb x:Name="ResizeBottomRight" Grid.ColumnSpan="2" Width="12" Height="12" HorizontalAlignment="Right" VerticalAlignment="Bottom" Cursor="SizeNWSE" Grid.RowSpan="2" 
               DragDelta="ResizeBottomRight_DragDelta" Background="Transparent" Opacity="0" IsHitTestVisible="True" Panel.ZIndex="100"/>
    </Grid>
</Window>
