<Page
    x:Class="KoolChanger.Client.Views.Pages.SkinsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:KoolChanger.Client.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:KoolChanger.Client.Views.Dialogs"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:KoolChanger.Client"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:KoolChanger.Client.ViewModels"
    Title="KOOLChanger"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Grid>
        <Border CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Name="debugColum" Width="0" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="10,0,20,40">
                            <Border Background="#993C3C3C" CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="3" Source="pack://application:,,,/assets/searchicon.png" />
                                    <TextBox
                                        Width="240"
                                        Padding="4"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontFamily="Comfortaa"
                                        FontSize="18"
                                        Foreground="#99F5DBFF"
                                        SelectionBrush="#66FFFFFF"
                                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="6" />
                                            </Style>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border x:Name="border" Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ScrollViewer x:Name="PART_ContentHost" Focusable="false"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsFocused" Value="True">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Border>
                        </Grid>


                        <components:Sidebar Grid.Row="1" />

                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <components:SkinGallery Grid.Row="1" />

                    </Grid>

                    <Border
                        Name="debugBorder"
                        Grid.Column="2"
                        Width="350"
                        Height="600">
                        <TextBlock
                            Foreground="#f5dbff"
                            Text="{Binding DebugText}"
                            TextWrapping="Wrap" />
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Margin="10"
                        VerticalAlignment="Center"
                        Content="{Binding StatusText}"
                        ContentStringFormat="Status: {0}"
                        FontSize="20"
                        Foreground="#f5dbff" />
                    <StackPanel
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="{Binding LobbyStatus}"
                            FontSize="14"
                            Foreground="#f5dbff" />
                        <Label
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding LobbyId}"
                            FontSize="14"
                            Foreground="#f5dbff" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>