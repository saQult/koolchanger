<Window
    x:Class="KoolChanger.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KoolChanger"
    mc:Ignorable="d"
    Title="KOOLChanger"
    Height="650" Width="1160"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResize"
    WindowStyle="None"
    Icon="/assets/icon.ico"
    MouseDown="DragMove">

    <Border Background="#99000000" CornerRadius="6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Margin="10" VerticalAlignment="Center" Orientation="Horizontal">
                    <Image Source="/assets/logo.png" Width="30" />
                    <Label Content="KOOLChanger" Foreground="#f5dbff" FontWeight="ExtraBold" FontSize="30" />
                </StackPanel>

                <!-- Search -->
                <Grid Grid.Row="1" Margin="20,0,20,40">
                    <Border Background="#993C3C3C" CornerRadius="6">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/searchicon.png" Margin="3" />
                            <TextBox x:Name="searchTextBox" Width="230" FontSize="18" Padding="4"
                                     FontFamily="Comfortaa" Background="Transparent" BorderBrush="Transparent"
                                     Foreground="#99F5DBFF" SelectionBrush="#66FFFFFF" TextChanged="Search">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="6" />
                                    </Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost" Focusable="false"
                                                                      HorizontalScrollBarVisibility="Hidden"
                                                                      VerticalScrollBarVisibility="Hidden" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Champion List -->
                <Grid Grid.Row="2">
                    <ListBox x:Name="championListBox" Margin="10,-30,0,35"
                             SelectionChanged="OnChampionSelected"
                             Background="Transparent" Foreground="#f5dbff" FontSize="20"
                             BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="40" Height="40"
                                             Margin="0,0,10,0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding IconUrl}" Stretch="UniformToFill"
                    Viewbox="0.1,0.1,0.8,0.8" ViewboxUnits="RelativeToBoundingBox"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               Foreground="White" FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" Padding="10" CornerRadius="5"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter x:Name="contentPresenter" TextElement.FontSize="20" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#99000000" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#66000000" />
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="contentPresenter"
                                                                                 Storyboard.TargetProperty="(TextElement.FontSize)"
                                                                                 To="22" Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="contentPresenter"
                                                                                 Storyboard.TargetProperty="(TextElement.FontSize)"
                                                                                 To="20" Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Width" Value="12" />
                                <Setter Property="Margin" Value="10,0,0,0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollBar">
                                            <Grid>
                                                <Border Background="#66333333" CornerRadius="6">
                                                    <Track Name="PART_Track" IsDirectionReversed="True">
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Border Background="#f5dbff" CornerRadius="6" Height="20" />
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </Grid>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="statusLabel" Content="Status: waiting"
                           Margin="10" Foreground="#f5dbff" FontSize="20"
                           VerticalAlignment="Bottom"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="3" HorizontalAlignment="Right" Cursor="">
                        <!-- Settings -->
                        <Image Source="/assets/settings.png" Cursor="Hand" MouseDown="OpenSettings">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Width" Value="24" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="30" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="24" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <!-- Minimize -->
                        <Image Source="/assets/minimizeicon.png" Cursor="Hand" MouseDown="Minimize" Margin="10,0,0,0">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Width" Value="24" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="30" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="24" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                        <!-- Close -->
                        <Image Source="/assets/closeicon.png" Cursor="Hand" MouseDown="CloseApp" Margin="10,0,10,0">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Width" Value="24" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="30" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Width" To="24" Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                </Grid>

                <!-- Scrollable Content -->
                <ScrollViewer Grid.Row="1" Margin="10,0,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="12" />
                            <Setter Property="Margin" Value="10,0,0,10" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Border Background="#66333333" CornerRadius="6">
                                                <Track Name="PART_Track" IsDirectionReversed="True" Height="560">
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Background="#f5dbff" CornerRadius="6" Height="20" />
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <WrapPanel x:Name="ImagePanel" />
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>
