<Window
    x:Class="KoolChanger.ClientMvvm.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:KoolChanger.ClientMvvm.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:KoolChanger.ClientMvvm.Views.Dialogs"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:KoolChanger.ClientMvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:KoolChanger.ClientMvvm.ViewModels"
    Title="KOOLChanger"
    Width="1160"
    Height="730"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="pack://application:,,,/Assets/icon.ico"
    KeyDown="CheckForCombinations"
    MouseDown="DragMove"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">



    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <Grid>
        <Border Background="#99000000" CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="80" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Name="debugColum" Width="0" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            Margin="10"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Image Width="30" Source="pack://application:,,,/assets/logo.png" />
                            <Label
                                Content="KOOLChanger"
                                FontSize="30"
                                FontWeight="ExtraBold"
                                Foreground="#f5dbff" />
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="20,0,0,40">
                            <Border Background="#993C3C3C" CornerRadius="6">
                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="3" Source="pack://application:,,,/assets/searchicon.png" />
                                    <TextBox
                                        Width="240"
                                        Padding="4"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontFamily="Comfortaa"
                                        FontSize="18"
                                        Foreground="#99F5DBFF"
                                        SelectionBrush="#66FFFFFF"
                                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>
                            </Border>
                        </Grid>


                        <components:Sidebar Grid.Row="2" />

                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                Grid.Column="0"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                Command="{Binding TogglePartyModeCommand}"
                                Content="Enable party mode"
                                Cursor="Hand"
                                FontSize="20"
                                Foreground="#f5dbff"
                                IsChecked="{Binding IsPartyModeEnabled, Mode=OneWay}">
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <Border
                                            x:Name="border"
                                            Padding="12,6"
                                            Background="#66000000"
                                            BorderBrush="#f5dbff"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <Grid>
                                                <Border
                                                    x:Name="RippleEffect"
                                                    Background="#20f5dbff"
                                                    CornerRadius="4"
                                                    Opacity="0" />
                                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                    <Rectangle
                                                        x:Name="CheckMark"
                                                        Width="16"
                                                        Height="16"
                                                        Margin="0,0,8,0"
                                                        Stroke="#f5dbff"
                                                        StrokeThickness="2" />
                                                    <ContentPresenter VerticalAlignment="Center" RecognizesAccessKey="True" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#10f5dbff" />
                                                <Setter TargetName="border" Property="BorderBrush" Value="#f5dbff" />
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="RippleEffect" Property="Opacity" Value="1" />
                                                <Setter TargetName="RippleEffect" Property="Background" Value="#30f5dbff" />
                                            </Trigger>

                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Fill" Value="#f5dbff" />
                                            </Trigger>

                                            <EventTrigger RoutedEvent="CheckBox.Click">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="RippleEffect"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="0.3"
                                                            To="0"
                                                            Duration="0:0:0.5" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </CheckBox.Template>
                            </CheckBox>

                            <Button
                                Grid.Column="1"
                                Margin="15,0,240,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="#f5dbff"
                                BorderThickness="1"
                                Command="{Binding OpenCustomSkinsCommand}"
                                Content="Custom skins"
                                Cursor="Hand"
                                FontSize="20"
                                Foreground="#f5dbff">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Padding="12,6"
                                            Background="#66000000"
                                            BorderBrush="#f5dbff"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <Grid>
                                                <Border
                                                    x:Name="RippleEffect"
                                                    Background="#20f5dbff"
                                                    CornerRadius="4"
                                                    Opacity="0" />
                                                <ContentPresenter
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    RecognizesAccessKey="True" />
                                            </Grid>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#10f5dbff" />
                                                <Setter TargetName="border" Property="BorderBrush" Value="#f5dbff" />
                                            </Trigger>

                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="RippleEffect" Property="Opacity" Value="1" />
                                                <Setter TargetName="RippleEffect" Property="Background" Value="#30f5dbff" />
                                            </Trigger>

                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5" />
                                            </Trigger>

                                            <EventTrigger RoutedEvent="Button.Click">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetName="RippleEffect"
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="0.3"
                                                            To="0"
                                                            Duration="0:0:0.5" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <StackPanel
                                Grid.Column="2"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <Image
                                    Width="24"
                                    Cursor="Hand"
                                    MouseDown="OpenSettings_Click"
                                    Source="pack://application:,,,/assets/settings.png" />
                                <Image
                                    Width="24"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"
                                    MouseDown="Minimize_Click"
                                    Source="pack://application:,,,/assets/minimizeicon.png" />
                                <Image
                                    Width="24"
                                    Margin="10,0,15,0"
                                    Cursor="Hand"
                                    MouseDown="CloseApp_Click"
                                    Source="pack://application:,,,/assets/closeicon.png" />
                            </StackPanel>
                        </Grid>

                        <components:SkinGallery Grid.Row="1" />

                    </Grid>

                    <Border
                        Name="debugBorder"
                        Grid.Column="2"
                        Width="350"
                        Height="600">
                        <TextBlock
                            Foreground="#f5dbff"
                            Text="{Binding DebugText}"
                            TextWrapping="Wrap" />
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Margin="10"
                        VerticalAlignment="Center"
                        Content="{Binding StatusText}"
                        ContentStringFormat="Status: {0}"
                        FontSize="20"
                        Foreground="#f5dbff" />
                    <StackPanel
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Orientation="Horizontal">
                        <Label
                            VerticalAlignment="Center"
                            Content="{Binding LobbyStatus}"
                            FontSize="14"
                            Foreground="#f5dbff" />
                        <Label
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding LobbyId}"
                            FontSize="14"
                            Foreground="#f5dbff" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>