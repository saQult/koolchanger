<UserControl
    x:Class="KoolChanger.ClientMvvm.Views.Components.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:KoolChanger.ClientMvvm.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/KoolChanger.ClientMvvm;component/Views/Styles/SidebarStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ListBox
        ItemsSource="{Binding ChampionListItems}"
        PreviewMouseWheel="SidebarList_PreviewMouseWheel"
        SelectedItem="{Binding SelectedChampionItem}"
        Style="{StaticResource SidebarListBoxStyle}">
        <ListBox.Resources>
            <Style BasedOn="{StaticResource SidebarScrollBar}" TargetType="ScrollBar" />
        </ListBox.Resources>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <Ellipse
                        Width="40"
                        Height="40"
                        Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <ImageBrush
                                ImageSource="{Binding IconUrl}"
                                Stretch="UniformToFill"
                                Viewbox="0.1,0.1,0.8,0.8"
                                ViewboxUnits="RelativeToBoundingBox" />
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>

        <ListBox.ItemContainerStyle>
            <StaticResource ResourceKey="SidebarListBoxItemStyle" />
        </ListBox.ItemContainerStyle>

    </ListBox>
</UserControl>
