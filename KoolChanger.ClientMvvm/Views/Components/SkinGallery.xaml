<UserControl
    x:Class="KoolChanger.ClientMvvm.Views.Components.SkinGallery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer Margin="10,0,0,0" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding DisplayedSkins}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="154"
                        Height="280"
                        Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>


                        <Border
                            Width="154"
                            Height="280"
                            BorderThickness="1"
                            ClipToBounds="True"
                            CornerRadius="10"
                            Cursor="Hand">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
                            </Border.RenderTransform>
                            <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>

                            <Border.InputBindings>
                                <MouseBinding
                                    Command="{Binding DataContext.SelectSkinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    MouseAction="LeftClick" />
                            </Border.InputBindings>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--  Зумим именно картинку (ScaleTransform на ImageBrush)  -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="SkinImageScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.1"
                                                Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SkinImageScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.1"
                                                Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <!--  Появление плашки с текстом  -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="TextBackground"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1.0"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!--  Возврат масштаба картинки  -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="SkinImageScale"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.0"
                                                Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation
                                                Storyboard.TargetName="SkinImageScale"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.0"
                                                Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <!--  Скрытие плашки  -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="TextBackground"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.0"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#f5dbff" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="BorderBrush" Value="Lime" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.Background>
                                <ImageBrush
                                    x:Name="SkinImageBrush"
                                    AlignmentX="Center"
                                    AlignmentY="Center"
                                    ImageSource="{Binding ImageUrl}"
                                    Stretch="UniformToFill">
                                    <ImageBrush.Transform>
                                        <ScaleTransform x:Name="SkinImageScale" CenterX="0.5" CenterY="0.5" ScaleX="1.0" ScaleY="1.0" />
                                    </ImageBrush.Transform>
                                </ImageBrush>
                            </Border.Background>

                            <Grid>
                                <Border
                                    x:Name="TextBackground"
                                    Height="30"
                                    VerticalAlignment="Top"
                                    Background="#80000000"
                                    CornerRadius="10,10,0,0"
                                    Opacity="0">
                                    <TextBlock
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="White"
                                        Text="{Binding Name}"
                                        TextTrimming="CharacterEllipsis" />
                                </Border>
                            </Grid>
                        </Border>

                        <Border
                            Width="130"
                            Height="160"
                            Margin="0,13,0,0"
                            VerticalAlignment="Top"
                            Background="#C8000000"
                            CornerRadius="10"
                            Visibility="{Binding ChromaPreview, Converter={StaticResource NullVisibilityConverter}}">
                            <Image
                                Width="130"
                                Height="200"
                                VerticalAlignment="Center"
                                Source="{Binding ChromaPreview.ImageUrl}"
                                Stretch="Uniform" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Margin="10,-90,10,10"
                            VerticalAlignment="Bottom"
                            Background="#961E1E1E"
                            CornerRadius="10">

                            <ItemsControl
                                Margin="0"
                                VerticalAlignment="Bottom"
                                ItemsSource="{Binding Children}"
                                Visibility="{Binding HasChromas, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="16"
                                            Height="16"
                                            Margin="2"
                                            BorderThickness="2"
                                            CornerRadius="16"
                                            Cursor="Hand">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="MouseEnter">
                                                    <i:InvokeCommandAction Command="{Binding ShowChromaPreviewCommand}" CommandParameter="{Binding}" />
                                                </i:EventTrigger>
                                                <i:EventTrigger EventName="MouseLeave">
                                                    <i:InvokeCommandAction Command="{Binding HideChromaPreviewCommand}" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                            <Border.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding DataContext.SelectSkinCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    MouseAction="LeftClick" />
                                            </Border.InputBindings>

                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="BorderBrush" Value="White" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Ellipse
                                                    Width="12"
                                                    Height="12"
                                                    Fill="{Binding Color}"
                                                    Visibility="{Binding IsChroma, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                <Grid Visibility="{Binding IsForm, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Ellipse
                                                        Width="20"
                                                        Height="20"
                                                        Fill="#505050" />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="10"
                                                        FontWeight="Bold"
                                                        Foreground="#f5dbff"
                                                        Text="{Binding Name}" />
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>