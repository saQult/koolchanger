<Window x:Class="KoolChanger.ClientMvvm.Views.Dialogs.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Height="250" Width="400"
        Title="CustomMessageBox">


    <Border CornerRadius="20" Background="#99000000" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Foreground="#f5dbff"
                       FontSize="16"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       Text="{Binding HeaderText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10" />

            <TextBlock Grid.Row="1"
                       Foreground="#f5dbff"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Text="{Binding MessageText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,20" />

            <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Height="30">
                <Button Content="Yes" Width="100" Margin="10,0"
                        Style="{StaticResource MaterialPurpleButton}"
                        Command="{Binding YesCommand}" />

                <Button Content="No" Width="100" Margin="10,0"
                        Style="{StaticResource MaterialPurpleButton}"
                        Command="{Binding NoCommand}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>