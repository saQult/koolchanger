<Window x:Class="KoolChanger.ClientMvvm.Views.Dialogs.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dialogs="clr-namespace:KoolChanger.ClientMvvm.ViewModels.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Title="Settings"
        Height="300"
        Width="500"
        d:DataContext="{d:DesignInstance dialogs:SettingsViewModel}"
        MouseLeftButtonDown="{Binding DragWindowCommand, Mode=OneWay}">

    <Window.Resources>
        <Style x:Key="MaterialPurpleButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#f5dbff" />
            <Setter Property="BorderBrush" Value="#f5dbff" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Padding" Value="16 8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#66000000"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Grid>
                                <Border x:Name="RippleEffect"
                                        Background="#20f5dbff"
                                        Opacity="0"
                                        CornerRadius="4" />
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#10f5dbff" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#f5dbff" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="RippleEffect" Property="Opacity" Value="1" />
                                <Setter TargetName="RippleEffect" Property="Background" Value="#30f5dbff" />
                            </Trigger>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RippleEffect"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="0"
                                                         Duration="0:0:0.5" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="#99000000" CornerRadius="10">
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="10" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Content="Select game folder" Width="200" Height="40" Margin="0,0,0,10"
                        Command="{Binding SelectGameFolderCommand}"
                        Style="{StaticResource MaterialPurpleButton}" />
                <Button Content="Get champions data" Width="200" Height="40" Margin="0,0,0,10"
                        Command="{Binding GetChampionDataCommand}"
                        Style="{StaticResource MaterialPurpleButton}" />
                <Button Content="Download Skins" Width="200" Height="40" Margin="0,0,0,10"
                        Command="{Binding DownloadSkinsCommand}"
                        Style="{StaticResource MaterialPurpleButton}" />
                <Button Content="Download skins preview" Width="200" Height="40" Margin="0,0,0,10"
                        Command="{Binding DownloadSkinsPreviewCommand}"
                        Style="{StaticResource MaterialPurpleButton}" />
            </StackPanel>


            <Label Content="{Binding Status}"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="10"
                   Foreground="#f5dbff" />

            <Image Source="pack://application:,,,/assets/closeicon.png"
                   Width="20"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="10"
                   Cursor="Hand">
                <Image.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding CloseCommand}"
                                  CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                </Image.InputBindings>
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="24" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="25"
                                                             Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Width" To="20"
                                                             Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Grid>
    </Border>
</Window>