<Window x:Class="KoolChanger.ClientMvvm.Views.Dialogs.CustomSkinsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:KoolChanger.ClientMvvm.ViewModels.Dialogs"

        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:KoolChanger.ClientMvvm.Behaviors"

        mc:Ignorable="d"
        Title="Custom skins" Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Closed="Window_Closed"
        MouseDown="DragWindow"
        d:DataContext="{d:DesignInstance vm:CustomSkinsViewModel}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <DataTemplate x:Key="SkinItemTemplate">
            <Border Style="{StaticResource SkinItemBorderStyle}" Height="80" Cursor="Hand">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown">
                        <b:InvokeCommandAction
                            Command="{Binding DataContext.ToggleSkinEnabledCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                            CommandParameter="{Binding}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="300" />
                    </Grid.ColumnDefinitions>

                    <CheckBox Style="{StaticResource SkinCheckBoxStyle}"
                              Content="{Binding RealName}"
                              IsChecked="{Binding Enabled, Mode=TwoWay}" />

                    <Grid Grid.Column="1" Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Label Content="{Binding Text}"
                               Foreground="#f5dbff"
                               FontSize="14"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Padding="0" />

                        <Image Grid.Column="1"
                               Source="pack://application:,,,/assets/trash.png"
                               Style="{StaticResource TrashImageStyle}">
                            <b:Interaction.Triggers>
                                <b:EventTrigger EventName="MouseDown">
                                    <b:InvokeCommandAction
                                        Command="{Binding DataContext.DeleteSkinCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}"
                                        CommandParameter="{Binding}" />
                                </b:EventTrigger>
                            </b:Interaction.Triggers>
                        </Image>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Border Background="#99000000" CornerRadius="10"
            AllowDrop="True"
            behaviors:DropFileBehavior.Command="{Binding DropCommand}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="3"
                    Background="#D9000000"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="10"
                                 Style="{StaticResource {x:Type ProgressBar}}"
                                 Foreground="#f5dbff" Margin="0,0,0,15" />
                    <TextBlock Text="{Binding BusyText}"
                               Foreground="#f5dbff"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <Image Source="pack://application:,,,/Assets/closeicon.png"
                   Width="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10"
                   Cursor="Hand" MouseDown="Close" />


            <Grid Grid.Row="1" Margin="30,35">
                <Border Background="#993C3C3C" CornerRadius="6">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/assets/searchicon.png" Margin="3" />
                        <TextBox x:Name="searchTextBox" Width="240" FontSize="18" Padding="4"
                                 FontFamily="Comfortaa" Background="Transparent" BorderBrush="Transparent"
                                 Foreground="#99F5DBFF" SelectionBrush="#66FFFFFF"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Resources>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>
                </Border>
            </Grid>

            <ListBox Grid.Row="2" Margin="10,0,10,0"
                     Name="customSkinsListBox"
                     ItemsSource="{Binding SkinListboxItems}"
                     ItemTemplate="{StaticResource SkinItemTemplate}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Resources>
                </ListBox.Resources>
            </ListBox>

        </Grid>
    </Border>
</Window>